{
  "name": "replay-api",
  "version": "1.0.0",
  "description": "This repository is intented to store all the replay-api related microservices",
  "main": "index.js",
  "dependencies": {
    "istanbul": "^0.4.5",
    "mocha": "^2.5.3",
    "replay-jobs-service": "^1.0.13",
